<?xml version="1.0" encoding="utf-8"?>
<ScrollView
 xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
   		android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="#fff" 
	    android:orientation="vertical">
	    
	    <!-- Title -->
	   	<TextView
	   		style="@style/TitleHeader"
	   		android:text="@string/run_editor_title" />
	   		
	   	<!-- Error message -->
	   	<LinearLayout
			android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical"
		    android:padding="6dp">
	   		<TextView
		   		android:id="@+id/errorMessage"
		   		style="@style/ErrorMessage"
		   		android:visibility="gone"/>
		</LinearLayout>	
		
		<LinearLayout
			android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:background="#fff" 
		    android:orientation="vertical"
		    android:padding="6dp">
		   		
	   		<TextView
				style="@style/FormText"
				android:text="@string/run_editor_run_date_label"/>
			
		  	<!-- Run Date -->	
		  	<DatePicker 
		  		android:id="@+id/date"
		  		style="@style/DatePicker"/>
		  		
		  	<!-- Run Time  -->
			<TextView
				style="@style/FormText"
				android:text="@string/run_editor_day_time_label"
				android:paddingTop="6dp"/>
		  		
			<TimePicker
				android:id="@+id/dayTime"
				style="@style/TimePicker"/>
				
			<!--  Run Distance -->
			<TextView
				style="@style/FormText"
				android:text="@string/run_editor_distance_label"/>
		  		
			<SeekBar
				android:id="@+id/distance"
				style="@style/SeekBar"/>
				
			<EditText
				android:id="@+id/distance_edit_view"
				style="@style/EditText"
				android:text="0"		
		  		android:editable="false"/>
	  		
			<!-- Run Time  -->
			<TextView
				style="@style/FormText"
				android:text="@string/run_editor_time_label"
				android:paddingTop="6dp"/>
		  		
			<TimePicker
				android:id="@+id/time"
				style="@style/TimePicker"/>
			
			<!-- Run Note -->		
			<TextView
		  		style="@style/FormText"
		  		android:text="@string/run_editor_note_label"
		  		android:paddingBottom="6dp"/>
		  		
		  	<EditText
		  		android:id="@+id/note"
		   		style="@style/EditText"/>
		  		
		  	<!-- Field From Preferences-->
		  	
		  	<!-- Heart Rate -->
		  	
		  	<TextView
		  		android:id="@+id/heart_rate_text"
		  		style="@style/FormText"
		  		android:text="@string/run_editor_heart_rate_label"
		  		android:paddingBottom="6dp"
		  		android:visibility="gone"/>
		  		
		  	<EditText
		  		android:id="@+id/heart_rate"
		   		style="@style/EditText"
		   		android:visibility="gone"
		   		android:inputType="number"/>
		   		
			<!-- Weight -->
			
			<TextView
				android:id="@+id/weight_text"
		  		style="@style/FormText"
		  		android:text="@string/run_editor_weight_label"
		  		android:paddingBottom="6dp"
		  		android:visibility="gone"/>
		  		
		  	<EditText
		  		android:id="@+id/weight"
		   		style="@style/EditText"
		   		android:visibility="gone"
		   		android:inputType="number"/>
			
			<!-- Shoes -->
			 
			<TextView
				android:id="@+id/shoes_text"
		  		style="@style/FormText"
		  		android:text="@string/run_editor_shoes_label"
		  		android:paddingBottom="6dp"
		  		android:visibility="gone"/>
		  		
		  	<EditText
		  		android:id="@+id/shoes"
		   		style="@style/EditText"
		   		android:visibility="gone"/> 
			 
			<!-- end of  Field From Preferences --> 
		  		
		  	<!-- Run Share -->
		  	<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:gravity="center_horizontal"
			    android:padding="6dp">
			  	<TextView
			  		android:text="Share"
			  		android:layout_width="wrap_content"
			  		android:layout_height="wrap_content"
			  		android:padding="6dp"/>
			  	<CheckBox
			  		android:id="@+id/share"
			  		android:layout_width="wrap_content"
			  		android:layout_height="wrap_content"
			  		android:padding="6dp"/>
			</LinearLayout>
			
			<!--  Run Submit -->
		  	<Button
		  		android:id="@+id/run_editor_submit"
		  		style="@style/Button"
		  		android:text="@string/run_editor_submit_label"
		  		android:onClick="submitFormMethod"/>
		    	
		</LinearLayout>
	</LinearLayout>
</ScrollView>