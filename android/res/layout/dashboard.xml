<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#fff" >
	
	<TextView
		android:text="Runner Diary" 
		style="@style/TitleHeader"/>
	<LinearLayout style="@style/DashboardRow">
	    <LinearLayout style="@style/DashboardCell">
		    	<ImageButton
		    		android:id="@+id/dashboardEditBtn" 
		    		android:src="@drawable/add2"
		    		style="@style/DashboardImage"/>
		    	<TextView
		    		android:text="Run" 
		    		style="@style/DashboardLabel"/>
	    </LinearLayout>
    	<LinearLayout
    		android:id="@+id/dashboardGeoStartContainer" 
    		style="@style/DashboardCell">
		    	<ImageButton 
		    		android:id="@+id/dashboardGeoStartBtn"
		    		android:src="@drawable/location_start" 
		    		style="@style/DashboardImage"/>
		    	<TextView
		    		android:text="Start" 
		    		style="@style/DashboardLabel"/>
	    </LinearLayout>
	    <LinearLayout
	    	android:id="@+id/dashboardGeoStopContainer"
	    	android:visibility="gone" 
	    	style="@style/DashboardCell">
		    	<ImageButton 
		    		android:id="@+id/dashboardGeoStopBtn"
		    		android:src="@drawable/location_stop" 
		    		style="@style/DashboardImage"/>
		    	<TextView
		    		android:text="Stop" 
		    		style="@style/DashboardLabel"/>
	    </LinearLayout>
	</LinearLayout>
	
	<LinearLayout style="@style/DashboardRow">
		<LinearLayout style="@style/DashboardCell">
		        <ImageButton 
	        		android:id="@+id/dashboardRunsBtn" 
		        	android:src="@drawable/list"  
		    		style="@style/DashboardImage"/>
	        	<TextView
		    		android:text="List" 
		    		style="@style/DashboardLabel"/>
		</LinearLayout>
		<LinearLayout style="@style/DashboardCell">
		    	<ImageButton
		    		android:id="@+id/dashboardStatisticsBtn" 
		    		android:src="@drawable/stats" 
		    		style="@style/DashboardImage"/>
		    	<TextView
		    		android:text="Stats" 
		    		style="@style/DashboardLabel"/>
		</LinearLayout>
    </LinearLayout>
    
    <LinearLayout style="@style/DashboardRow">
		<LinearLayout style="@style/DashboardCell">
		    	<ImageButton 
		    		android:id="@+id/dashboardProfileBtn"
		    		android:src="@drawable/logo_no_btn" 
		    		style="@style/DashboardImage"/>
		    	<TextView
		    		android:text="Profile" 
		    		style="@style/DashboardLabel"/>
	    </LinearLayout>
		<LinearLayout style="@style/DashboardCell">
		        <ImageButton 
	        		android:id="@+id/dashboardDownloadBtn" 
		        	android:src="@drawable/download_no_btn"  
		    		style="@style/DashboardImage"/>
	        	<TextView
		    		android:text="Sync" 
		    		style="@style/DashboardLabel"/>
		</LinearLayout>
    </LinearLayout>
</LinearLayout>