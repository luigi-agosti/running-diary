	<PreferenceCategory 
		android:title="General" >
		<CheckBoxPreference 
			android:key="syncOnWifi"
			android:title="Wi-Fi Connection"
			android:summary="Enable auto sync on Wi-Fi connection" />
		<CheckBoxPreference 
			android:key="syncOnMobile"
			android:title="Mobile Connection" 
			android:summary="Enable auto sync on Mobile connection" />
	</PreferenceCategory>

	<PreferenceCategory 
		android:title="Synchronisation">
		<CheckBoxPreference 
			android:key="syncEnabled"
			android:title="Automatic sync"
			android:defaultValue="true" 
			android:summary="Enable automatic sync"/>
		<uk.co.and.dailymail.android.preference.DatePickerDialogPrefernce
			android:key="syncDownloadTime"
			android:title="Download schedule" 
			android:defaultValue="05:00"
			android:summary="Set the time when you want to automaticaly run the sync" />

		<PreferenceScreen 
			android:background="#ffffff" 
			android:title="Data to sync"
			android:summary="Select what you want to sync">
			<PreferenceCategory 
				android:key="syncChannelsPreference"
				android:title="Channels">
			</PreferenceCategory>
			<PreferenceCategory 
				android:title="Images">
				<CheckBoxPreference 
					android:key="syncThumbnailImagesEnabled" 
					android:title="Sync thumbnail images"
					android:defaultValue="true" 
					android:summary="Download all the thumbnail images" />
				<CheckBoxPreference 
					android:key="syncArticleImagesEnabled" 
					android:title="Sync article images"
					android:defaultValue="true" 
					android:summary="Download all the article images" />
			</PreferenceCategory>
		</PreferenceScreen>
	</PreferenceCategory>
	
	<PreferenceCategory 
		android:key="general"
		android:title="General">
		<Preference 
			android:key="version" 
			android:title="Version" />
		<PreferenceScreen 
			android:title="About"
			android:summary="Lorem ipsum dolor sit amet, consectetur">
			<Preference 
				android:title="About"
				android:summary="Lorem ipsum dolor sit amet, consectetur ........." />
		</PreferenceScreen>
	</PreferenceCategory>

</PreferenceScreen>