<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory 
		android:key="accountContainer"
		android:title="Accounts (you need a google account)">
		<ListPreference
			android:key="accountPreference"
			android:title="Account"
			android:summary="Choose your account" />
	</PreferenceCategory>
	
	<PreferenceCategory
		android:key="formFields"
		android:title="Personalize Data">
		
		<CheckBoxPreference
			android:key="heartRate"
			android:title="Heart Rate"/>
		<CheckBoxPreference
			android:key="weight"
			android:title="Weight"
		/>
		<CheckBoxPreference 
			android:key="shoes"
			android:title="Shoes"
		/>
		</PreferenceCategory>
	
	<PreferenceCategory 
		android:key="general"
		android:title="General">
		<Preference 
			android:key="version" 
			android:title="Version" />
	</PreferenceCategory>
	
	

</PreferenceScreen>